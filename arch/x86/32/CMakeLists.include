set(ASM_FORMAT -f elf)
set(KERNEL_BINARY kernel.x)
set(CMAKE_CXX_FLAGS "${CMAKE_CXX_FLAGS} -m32 -O0 -gstabs2 -Wall -Wextra -Wno-deprecated -nostdinc -nostdlib -nostartfiles -nodefaultlibs -nostdinc++ -fno-builtin -fno-rtti -fno-exceptions -fno-stack-protector")
set(CMAKE_C_FLAGS "${CMAKE_C_FLAGS}     -m32 -O0 -gstabs2 -Wall -Wextra                 -nostdinc -nostdlib -nostartfiles -nodefaultlibs             -fno-builtin           -fno-exceptions -fno-stack-protector")

set(LD_ARGUMENT -m32 -Wl,--build-id=none -mcmodel=kernel -Wl,-z -Wl,max-page-size=0x1000 -Wl,-melf_i386 -nostdinc -nostdlib -nodefaultlibs)
set(APPEND_LD_ARGUMENTS )
set(KERNEL_IMAGE_OBJCOPY )

add_custom_target(kvm
	COMMAND qemu-system-i386 -m 8M -smp 2 -cpu kvm32 -hda SWEB-flat.vmdk -debugcon stdio
  COMMENT "Going to qemu-system-i386 -m 8M -smp 2 -cpu kvm32 -hda SWEB-flat.vmdk -debugcon stdio"
  WORKING_DIRECTORY ${PROJECT_BINARY_DIR}
  COMMAND reset -I
  )

#Custom target: make qemu
#Run qemu in non debugging mode
#COMMAND	qemu-system-i386 -m 8M -smp 2 -cpu qemu32 -hda SWEB-flat.vmdk -debugcon stdio -monitor stdio -d cpu_reset
add_custom_target(qemu
	COMMAND	qemu-system-i386 -m 8M -smp 2 -cpu qemu32 -hda SWEB-flat.vmdk -debugcon stdio
	COMMENT "Going to qemu-system-i386 -m 8M -smp 2 -cpu qemu32 -hda SWEB-flat.vmdk -debugcon stdio"
	WORKING_DIRECTORY ${PROJECT_BINARY_DIR}
	COMMAND reset -I
	)

#Custom target: make qemu
#Run qemu in non debugging mode
add_custom_target(qemugdb
	COMMAND	qemu-system-i386 -no-kvm -s -S -m 8M -smp 2 -hda SWEB-flat.vmdk -debugcon stdio
	COMMENT "Going to gdb qemu-system-i386 -s -S -m 8M -smp 2 -hda SWEB-flat.vmdk -debugcon stdio on localhost:1234"
	WORKING_DIRECTORY ${PROJECT_BINARY_DIR}
	COMMAND reset -I
	)

#Custom target: make qemutacos
#Run qemu in pipe monitor mode for tacos
add_custom_target(qemutacos
  COMMAND qemu-system-i386 -hda SWEB-flat.vmdk -m 8M -smp 2 -snapshot -monitor pipe:qemu -nographic -debugcon /dev/stdout
  COMMENT "Going to qemu-system-i386 -hda SWEB-flat.vmdk -m 8M -smp 2 -snapshot -monitor pipe:qemu -nographic -debugcon /dev/stdout"
  WORKING_DIRECTORY ${PROJECT_BINARY_DIR}
  #COMMAND reset -I
  )


